                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "if (jsonData.success && jsonData.data.token) {",
                                    "    pm.environment.set(\"user_token\", jsonData.data.token);",
                                    "    pm.test(\"User details are present\", function () {",
                                    "        pm.expect(jsonData.data.name).to.exist;",
                                    "        pm.expect(jsonData.data.email).to.exist;",
                                    "        pm.expect(jsonData.data.role).to.eql(\"USER\");",
                                    "    });",
                                    "}"
